% makes header
\newcommand{\makefinding}[1]{
    \vspace*{-1cm} % get rid of random white space
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[t][0.15\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}[c][0.15\paperheight][c]{\textwidth}
          \textcolor{white}
            {
            \begin{center}
                 \nohyphens{#1}
            \end{center}
            }
          \end{minipage}%
        }%
      }%
    }\par\medskip
}

% makes footer
\newcommand{\makefooter}[2]{
    \vspace*{\fill}
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[c][0.10\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}[c][0.09\paperheight][c]{0.15\textwidth}
                \includegraphics[height=0.09\paperheight, left]{#2}
          \end{minipage}
          \begin{minipage}[c][0.09\paperheight][c]{0.3\textwidth}
              \textcolor{white}
                {\large{
                   \fontsize{50}{68}\selectfont \bf $\leftarrow$ Resources}
                }  
          \end{minipage}
          \hfill
          \begin{minipage}[c][0.09\paperheight][c]{0.2\textwidth}
            \includegraphics[height=0.09\paperheight, left]{#1}
          \end{minipage}
        }%
      }%
    }\par\medskip
}


% makes upper footer
\newcommand{\makeupperfooter}[1]{
